@page
@model LoginModel

@{
    ViewData["Title"] = "Inicia sesión";
}

<h1>@ViewData["Title"]</h1>

<hr class="featurette-divider">
<div class="row featurette">  
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
            
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Correo Electronico</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                 <div class="form-group">
                    <button type="submit" class="btn btn- bg-primary text-white btn-lg btn-block">Iniciar sesión</button>
                </div>
                
            </form>
            
        </div>
         <div class="col-md-6 order-md-2">
            <img class="featurette-image img-fluid mx-auto" src="https://www.elpais.com.co/files/article_main/uploads/2017/02/03/5898a05c1e801.jpeg" alt="Generic placeholder image">
          </div>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
