@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrate";
}

<h1>Registrarse</h1>

<hr class="featurette-divider">
<div class="row featurette">  
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <button type="submit" class="btn btn- bg-primary text-white btn-lg btn-block">Registrarse</button>
             </div>
            
        </form>
    </div>
    <div class="col-md-6 order-md-2">
        <img class="card-img-top" src="https://www.cali.gov.co/cultura/info/principal/media/pubInt/thumbs/thpub_700x400_142522.jpg" height="350">
     </div>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
