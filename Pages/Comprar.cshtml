@model ComprarModel
@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>

<div class="container row">
    <div class="col-6">
        <h2 class="text-info"> Subastas Disponibles </h2>
    </div>
    <br> 
    <br>
    <br>
 <!--   <div class="col-6 tex-right">
